---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const values = [
  {
    title: t('about.values.detail'),
    titleEn: "Attention to Detail",
    description: t('about.values.detailDesc')
  },
  {
    title: t('about.values.quality'),
    titleEn: "Quality Materials",
    description: t('about.values.qualityDesc')
  },
  {
    title: t('about.values.commitment'),
    titleEn: "Commitment",
    description: t('about.values.commitmentDesc')
  },
  {
    title: t('about.values.reliability'),
    titleEn: "Reliability",
    description: t('about.values.reliabilityDesc')
  }
];

const services = lang === 'th'
  ? ["ก่อสร้างอาคาร", "อาคารพาณิชย์", "อาคารที่พักอาศัย", "สถานที่ทำการ", "ถนน สะพาน", "เขื่อน อุโมงค์", "โรงงานและโกดัง", "งานโยธาทุกประเภท"]
  : ["Buildings", "Commercial Buildings", "Residential Buildings", "Office Buildings", "Roads & Bridges", "Dams & Tunnels", "Factories & Warehouses", "All Civil Works"];
---

<Layout title={t('about.title')}>
  <section class="page-header">
    <div class="container">
      <h1>{t('about.heading')}</h1>
      <p>{t('about.companyName')}</p>
    </div>
  </section>

  <section class="about-intro section">
    <div class="container">
      <div class="intro-content" data-animate>
        <h2>A.INTER CONSTRUCTION COMPANY LIMITED</h2>
        <p class="intro-lead">{t('about.intro')}</p>
        <p>{t('about.capacity')}</p>
      </div>
    </div>
  </section>

  <section class="vision section">
    <div class="container">
      <div class="vision-content" data-animate>
        <h2>{t('about.vision.title')}</h2>
        <p class="vision-text">{t('about.vision.text')}</p>
      </div>
    </div>
  </section>

  <section class="values section">
    <div class="container">
      <h2 class="section-title" data-animate>{t('about.values.title')}</h2>
      <p class="section-subtitle" data-animate>{t('about.values.subtitle')}</p>
      <div class="values-grid" data-stagger>
        {values.map((value) => (
          <div class="value-card" data-animate>
            <h3>{value.title}</h3>
            <span class="value-title-en">{value.titleEn}</span>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="services-list section">
    <div class="container">
      <h2 class="section-title" data-animate>{t('about.services.title')}</h2>
      <p class="section-subtitle" data-animate>{t('about.services.subtitle')}</p>
      <div class="services-grid" data-stagger>
        {services.map((service) => (
          <div class="service-item" data-animate>
            <span>{service}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="capacity section">
    <div class="container">
      <div class="capacity-content" data-animate>
        <h2>{t('about.capacity.title')}</h2>
        <div class="capacity-stat">
          <span class="capacity-number" data-count="10000" data-suffix="+">0</span>
          <span class="capacity-label">{t('about.capacity.unit')}</span>
        </div>
        <p>{t('about.capacity')}</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 4rem 0;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .page-header p {
    font-size: 1.125rem;
    opacity: 0.9;
  }

  .about-intro {
    background-color: var(--color-white);
  }

  .intro-content {
    max-width: 800px;
  }

  .intro-content h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .intro-lead {
    font-size: 1.125rem;
    color: var(--color-text);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .intro-content p {
    font-size: 1rem;
    color: var(--color-text-light);
    line-height: 1.8;
  }

  .vision {
    background-color: var(--color-bg-alt);
  }

  .vision-content {
    max-width: 700px;
    text-align: center;
    margin: 0 auto;
  }

  .vision-content h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .vision-text {
    font-size: 1.25rem;
    color: var(--color-text);
    line-height: 1.8;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .value-card {
    background-color: var(--color-white);
    padding: 1.75rem;
    border: 1px solid var(--color-border);
  }

  .value-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .value-title-en {
    display: block;
    font-size: 0.75rem;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .value-card p {
    font-size: 0.875rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .services-list {
    background-color: var(--color-white);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-top: 3rem;
  }

  .service-item {
    background-color: var(--color-bg);
    padding: 1.25rem;
    text-align: center;
    border: 1px solid var(--color-border);
  }

  .service-item span {
    font-size: 0.9375rem;
    color: var(--color-text);
    font-weight: 500;
  }

  .capacity {
    background-color: var(--color-primary);
    color: var(--color-white);
  }

  .capacity-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .capacity-content h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .capacity-stat {
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
  }

  .capacity-number {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
  }

  .capacity-label {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-top: 0.5rem;
  }

  .capacity-content p {
    font-size: 1rem;
    opacity: 0.85;
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .capacity-number {
      font-size: 3rem;
    }
  }
</style>
