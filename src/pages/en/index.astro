---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const stats = [
  { number: 10000, suffix: "+", label: t('home.stats.sqm') },
  { number: 12, suffix: "+", label: t('home.stats.projects') },
  { number: 150, suffix: "+", label: t('home.stats.million') },
  { number: 100, suffix: "%", label: t('home.stats.satisfaction') }
];

const services = [
  {
    title: t('home.services.factory'),
    titleEn: "Factory & Warehouse",
    description: t('home.services.factoryDesc')
  },
  {
    title: t('home.services.commercial'),
    titleEn: "Commercial Building",
    description: t('home.services.commercialDesc')
  },
  {
    title: t('home.services.residential'),
    titleEn: "Residential",
    description: t('home.services.residentialDesc')
  }
];
---

<Layout title={t('home.title')}>
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>{t('home.hero.title')}</h1>
        <p class="hero-tagline">{t('home.hero.tagline')}</p>
        <p class="hero-description">{t('home.hero.description')}</p>
        <div class="hero-buttons">
          <a href={getLocalizedPath('/portfolio', lang)} class="btn">{t('home.hero.viewWork')}</a>
          <a href={getLocalizedPath('/contact', lang)} class="btn btn-outline">{t('home.hero.contactUs')}</a>
        </div>
      </div>
    </div>
  </section>

  <section class="stats">
    <div class="container">
      <div class="stats-grid" data-stagger>
        {stats.map((stat) => (
          <div class="stat-item" data-animate>
            <span class="stat-number" data-count={stat.number} data-suffix={stat.suffix}>0</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="services section">
    <div class="container">
      <h2 class="section-title" data-animate>{t('home.services.title')}</h2>
      <p class="section-subtitle" data-animate>{t('home.services.subtitle')}</p>
      <div class="services-grid" data-stagger>
        {services.map((service) => (
          <div class="service-card" data-animate>
            <h3>{service.title}</h3>
            <span class="service-title-en">{service.titleEn}</span>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="container">
      <div class="cta-content" data-animate>
        <h2>{t('home.cta.title')}</h2>
        <p>{t('home.cta.subtitle')}</p>
        <a href={getLocalizedPath('/contact', lang)} class="btn">{t('home.cta.button')}</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 6rem 0;
  }

  .hero-content {
    max-width: 700px;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.15;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .hero-tagline {
    font-size: 1.25rem;
    opacity: 0.95;
    margin-bottom: 1rem;
    line-height: 1.6;
    font-weight: 500;
  }

  .hero-description {
    font-size: 1rem;
    opacity: 0.85;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
  }

  .hero .btn {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .hero .btn:hover {
    background-color: var(--color-bg-alt);
  }

  .hero .btn-outline {
    background-color: transparent;
    border-color: var(--color-white);
    color: var(--color-white);
  }

  .hero .btn-outline:hover {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .stats {
    background-color: var(--color-white);
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .service-card {
    background-color: var(--color-white);
    padding: 2rem;
    border: 1px solid var(--color-border);
  }

  .service-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .service-title-en {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .service-card p {
    font-size: 0.9375rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .cta {
    background-color: var(--color-bg-alt);
    padding: 5rem 0;
  }

  .cta-content {
    text-align: center;
    max-width: 550px;
    margin: 0 auto;
  }

  .cta h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .cta p {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
