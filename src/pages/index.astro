---
import Layout from '../layouts/Layout.astro';

const services = [
  {
    title: "โรงงานและโกดัง",
    titleEn: "Factory & Warehouse",
    description: "ก่อสร้างโรงงาน โกดังเก็บสินค้า คลังสินค้า ด้วยมาตรฐานสูง"
  },
  {
    title: "อาคารพาณิชย์",
    titleEn: "Commercial Building",
    description: "ก่อสร้างอาคารพาณิชย์ อาคารสำนักงาน สถานที่ทำการทุกประเภท"
  },
  {
    title: "บ้านพักอาศัย",
    titleEn: "Residential",
    description: "ก่อสร้างบ้านพักอาศัย ตามแบบที่ต้องการ ใส่ใจทุกรายละเอียด"
  }
];

const stats = [
  { number: "10,000+", label: "ตร.ม. ต่อปี", labelEn: "sq.m. per year" },
  { number: "12+", label: "โครงการ", labelEn: "Projects" },
  { number: "150+", label: "ล้านบาท", labelEn: "Million Baht" },
  { number: "100%", label: "ความพึงพอใจ", labelEn: "Satisfaction" }
];
---

<Layout title="A.Inter Construction - บริการงานก่อสร้างครบวงจร">
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>A.INTER CONSTRUCTION</h1>
        <p class="hero-tagline">บริการด้านงานก่อสร้าง ใส่ใจรายละเอียด วัสดุที่ได้มาตรฐาน ไม่ทิ้งงาน เชื่อถือได้</p>
        <p class="hero-description">เราสามารถทำการก่อสร้าง งานโรงงานและโกดัง อาคาร บ้านพักอาศัย ได้ปีละมากกว่าหนึ่งหมื่นตารางเมตรขึ้นไป</p>
        <div class="hero-buttons">
          <a href="/portfolio" class="btn">ดูผลงานของเรา</a>
          <a href="/contact" class="btn btn-outline">ติดต่อเรา</a>
        </div>
      </div>
    </div>
  </section>

  <section class="stats">
    <div class="container">
      <div class="stats-grid">
        {stats.map((stat) => (
          <div class="stat-item">
            <span class="stat-number">{stat.number}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="services section">
    <div class="container">
      <h2 class="section-title">บริการของเรา</h2>
      <p class="section-subtitle">รับเหมาก่อสร้างอาคาร อาคารพาณิชย์ อาคารที่พักอาศัย สถานที่ทำการ ถนน สะพาน เขื่อน อุโมงค์ และการก่อสร้างอย่างอื่นทุกชนิด รวมทั้งงานโยธาทุกประเภท</p>
      <div class="services-grid">
        {services.map((service) => (
          <div class="service-card">
            <h3>{service.title}</h3>
            <span class="service-title-en">{service.titleEn}</span>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="container">
      <div class="cta-content">
        <h2>คิดถึงงานก่อสร้าง คิดถึง A.Inter</h2>
        <p>ให้เราช่วยดูแลโครงการก่อสร้างของคุณ</p>
        <a href="/contact" class="btn">ติดต่อเราวันนี้</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 6rem 0;
  }

  .hero-content {
    max-width: 700px;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.15;
    margin-bottom: 1.5rem;
    letter-spacing: 0.02em;
  }

  .hero-tagline {
    font-size: 1.25rem;
    opacity: 0.95;
    margin-bottom: 1rem;
    line-height: 1.6;
    font-weight: 500;
  }

  .hero-description {
    font-size: 1rem;
    opacity: 0.85;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
  }

  .hero .btn {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .hero .btn:hover {
    background-color: var(--color-bg-alt);
  }

  .hero .btn-outline {
    background-color: transparent;
    border-color: var(--color-white);
    color: var(--color-white);
  }

  .hero .btn-outline:hover {
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .stats {
    background-color: var(--color-white);
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .service-card {
    background-color: var(--color-white);
    padding: 2rem;
    border: 1px solid var(--color-border);
  }

  .service-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .service-title-en {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .service-card p {
    font-size: 0.9375rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .cta {
    background-color: var(--color-bg-alt);
    padding: 5rem 0;
  }

  .cta-content {
    text-align: center;
    max-width: 550px;
    margin: 0 auto;
  }

  .cta h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .cta p {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
