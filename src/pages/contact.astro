---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const contactInfo = [
  {
    label: t('contact.info.phone'),
    value: "093-934-3554",
    href: "tel:0939343554"
  },
  {
    label: t('contact.info.altPhone'),
    value: "093-964-2478",
    href: "tel:0939642478"
  },
  {
    label: "LINE",
    value: "093-934-3554",
    href: null
  },
  {
    label: t('contact.info.address'),
    value: lang === 'th'
      ? "25 ซอยนนทบุรี 6 แยก 4 ตำบลตลาดขวัญ อำเภอเมือง จังหวัดนนทบุรี 11000"
      : "25 Soi Nonthaburi 6 Yaek 4, Talat Khwan, Mueang, Nonthaburi 11000, Thailand",
    href: null
  }
];
---

<Layout title={t('contact.title')}>
  <section class="page-header">
    <div class="container">
      <h1>{t('contact.heading')}</h1>
      <p>{t('contact.subtitle')}</p>
    </div>
  </section>

  <section class="contact section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-form-wrapper" data-animate>
          <h2>{t('contact.form.title')}</h2>
          <form class="contact-form" id="contact-form" data-success={t('contact.form.success')}>
            <div class="form-row">
              <div class="form-group">
                <label for="name">{t('contact.form.name')}</label>
                <input type="text" id="name" name="name" required />
              </div>
              <div class="form-group">
                <label for="phone">{t('contact.form.phone')}</label>
                <input type="tel" id="phone" name="phone" required />
              </div>
            </div>
            <div class="form-group">
              <label for="email">{t('contact.form.email')}</label>
              <input type="email" id="email" name="email" />
            </div>
            <div class="form-group">
              <label for="project-type">{t('contact.form.projectType')}</label>
              <select id="project-type" name="project-type">
                <option value="">{t('contact.form.selectType')}</option>
                <option value="factory">{t('contact.form.factory')}</option>
                <option value="commercial">{t('contact.form.commercial')}</option>
                <option value="residential">{t('contact.form.residential')}</option>
                <option value="renovation">{t('contact.form.renovation')}</option>
                <option value="other">{t('contact.form.other')}</option>
              </select>
            </div>
            <div class="form-group">
              <label for="message">{t('contact.form.message')}</label>
              <textarea id="message" name="message" rows="5" placeholder={t('contact.form.messagePlaceholder')} required></textarea>
            </div>
            <button type="submit" class="btn">{t('contact.form.submit')}</button>
          </form>
        </div>

        <div class="contact-info-wrapper" data-stagger>
          <div class="contact-details" data-animate>
            <h3>{t('contact.info.title')}</h3>
            <ul class="contact-list">
              {contactInfo.map((item) => (
                <li>
                  <span class="contact-label">{item.label}</span>
                  {item.href ? (
                    <a href={item.href}>{item.value}</a>
                  ) : (
                    <span class="contact-value">{item.value}</span>
                  )}
                </li>
              ))}
            </ul>
          </div>

          <div class="line-contact" data-animate>
            <h3>{t('contact.line.title')}</h3>
            <div class="line-info">
              <span class="line-id">LINE : 093-934-3554</span>
              <p>{t('contact.line.desc')}</p>
            </div>
          </div>

          <div class="quick-contact" data-animate>
            <h3>{t('contact.call.title')}</h3>
            <a href="tel:0939343554" class="phone-link">
              <span class="phone-number">093-934-3554</span>
            </a>
            <p>{t('contact.call.desc')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="tagline">
    <div class="container">
      <p data-animate>{t('contact.tagline')}</p>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 4rem 0;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .page-header p {
    font-size: 1.125rem;
    opacity: 0.9;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 4rem;
  }

  .contact-form-wrapper h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-white);
    color: var(--color-text);
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-info-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contact-details,
  .line-contact,
  .quick-contact {
    background-color: var(--color-white);
    padding: 1.5rem;
    border: 1px solid var(--color-border);
  }

  .contact-info-wrapper h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .contact-list {
    list-style: none;
  }

  .contact-list li {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .contact-list li:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .contact-list li:first-child {
    padding-top: 0;
  }

  .contact-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light);
  }

  .contact-list a,
  .contact-value {
    font-size: 0.9375rem;
    color: var(--color-text);
  }

  .contact-list a:hover {
    color: var(--color-primary);
  }

  .line-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .line-id {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .line-contact p,
  .quick-contact p {
    font-size: 0.875rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .phone-link {
    display: block;
    margin-bottom: 0.5rem;
  }

  .phone-number {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .phone-link:hover .phone-number {
    color: var(--color-primary-dark);
  }

  .tagline {
    background-color: var(--color-bg-alt);
    padding: 3rem 0;
    text-align: center;
  }

  .tagline p {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .tagline p {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const successMessage = form.dataset.success || 'Thank you!';
    alert(successMessage);
    form.reset();
  });
</script>
